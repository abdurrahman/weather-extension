{
  "name": "Weather",
  "description": "Weather result in your browser..",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
	"persistent": false
  },
  "content_security_policy": "script-src 'self' https://geoip-db.com https://*.yahooapis.com; object-src 'self'",
  "browser_action": {
    "default_icon": { "38": "images/icon38.png" },
    "default_title": "Weather",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "alarms",
    "storage",
	"tabs",
    "geolocation"
  ]
}
