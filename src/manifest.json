{
  "name": "Weather",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Weather result in your browser..",
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png",
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "browser_action": {
    "default_icon": { "38": "img/icon38.png" },
    "default_title": "Weather",
    "default_popup": "html/popup.html",
  },
  "options_page": "html/options.html",
  "permissions": [
    "tabs",
    "alarms",
    "notifications",
    "storage",
    "geolocation"
  ]
}
