{
  "name": "Weather IO",
  "description": "The simpliest way to check forecast weather results.",
  "version": "2.0.0",
  "manifest_version": 2,
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "persistent": true,
    "scripts": ["js/background.js"]
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://api.darksky.net/; object-src 'self'",
  "browser_action": {
    "default_icon": { "38": "images/icon38.png" },
    "default_title": "Weather IO Extension",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "geolocation",
  	"http://*/*",
  	"https://*/*",
    "cookies"
  ]
}
