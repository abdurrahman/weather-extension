{
  "name": "Weather",
  "description": "Weather result in your browser..",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "js/jquery-1.11.0.min.js",
      "js/popup.js",
      "js/background.js"
    ],
	"persistent": true
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://api.darksky.net/; object-src 'self'",
  "browser_action": {
    "default_icon": { "38": "images/icon38.png" },
    "default_title": "Weather Extension",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "storage",
    "geolocation",
  	"http://*/*",
  	"https://*/*",
    "cookies"
  ]
}
